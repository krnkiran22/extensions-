{
  "manifest_version": 3,
  "name": "Key Sound Player",
  "version": "1.0",
  "description": "Play specific sounds on every key press!",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
