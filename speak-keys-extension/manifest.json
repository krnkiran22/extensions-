{
  "manifest_version": 1,
  "name": "Speak Keys",
  "version": "1.0",
  "description": "Speaks the key you pressed. Helpful for blind people.",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
